@page "{id:int}"
@model Students.Delete

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Data.LastName)
        </dt>
        <dd>
            @Model.Data.LastName
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Data.FirstMidName)
        </dt>
        <dd>
            @Model.Data.FirstMidName
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Data.EnrollmentDate)
        </dt>
        <dd>
            @Model.Data.EnrollmentDate
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Data.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Index">Back to List</a>
    </form>
</div>
