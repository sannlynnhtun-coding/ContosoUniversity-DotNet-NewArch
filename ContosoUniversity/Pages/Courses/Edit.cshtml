@page "{id:int}"
@model Courses.Edit

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Data.Id" />
            
            <div class="form-group">
                <label class="control-label">Number</label>
                <div>@Model.Data.Id</div>
            </div>

            <div class="form-group">
                <label asp-for="Data.Title" class="control-label"></label>
                <input asp-for="Data.Title" class="form-control" />
                <span asp-validation-for="Data.Title" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Data.Credits" class="control-label"></label>
                <input asp-for="Data.Credits" class="form-control" />
                <span asp-validation-for="Data.Credits" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Data.DepartmentId" class="control-label">Department</label>
                <select asp-for="Data.DepartmentId" class="form-control" asp-items="Model.Departments">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="Data.DepartmentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
