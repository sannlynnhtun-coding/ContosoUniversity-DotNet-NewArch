@page "{id:int}"
@model Departments.Edit

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Data.Id" />
            <input type="hidden" asp-for="Data.RowVersion" />

            <div class="form-group">
                <label asp-for="Data.Name" class="control-label"></label>
                <input asp-for="Data.Name" class="form-control" />
                <span asp-validation-for="Data.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.Budget" class="control-label"></label>
                <input asp-for="Data.Budget" class="form-control" />
                <span asp-validation-for="Data.Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.StartDate" class="control-label"></label>
                <input asp-for="Data.StartDate" class="form-control" />
                <span asp-validation-for="Data.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data.InstructorId" class="control-label">Administrator</label>
                <select asp-for="Data.InstructorId" class="form-control" asp-items="Model.Instructors">
                    <option value="">-- Select Administrator --</option>
                </select>
                <span asp-validation-for="Data.InstructorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
