<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contoso University</title>
    <!-- Tailwind CSS (compiled) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
</head>
<body class="h-full font-sans antialiased text-slate-900">
    <mini-profiler />

    <div class="flex h-full">
        <!-- Sidebar -->
        <aside class="w-64 bg-premium-900 text-white flex flex-col shadow-2xl z-20 hidden md:flex">
            <div class="h-16 flex items-center justify-center border-b border-premium-800 bg-premium-950">
                <a asp-page="/Index" class="text-xl font-bold tracking-wide flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-premium-400">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.499 5.216 50.552 50.552 0 00-2.658.813m-15.482 0A50.55 50.55 0 0112 13.489a50.55 50.55 0 0110.499-1.342m-13.353-8.841l-3.328 3.328" />
                    </svg>
                    Contoso Uni
                </a>
            </div>

            <nav class="flex-1 overflow-y-auto py-4 space-y-1 px-3">
                <p class="px-3 text-xs font-semibold text-premium-400 uppercase tracking-wider mb-2">Menu</p>
                
                <a asp-page="/Index" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md hover:bg-premium-800 hover:text-white transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "bg-premium-800 text-white" : "text-premium-100")">
                    <svg class="mr-3 h-6 w-6 text-premium-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    Dashboard
                </a>

                <a asp-page="/Students/Index" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md hover:bg-premium-800 hover:text-white transition-colors @(ViewContext.RouteData.Values["page"]?.ToString().StartsWith("/Students") == true ? "bg-premium-800 text-white" : "text-premium-100")">
                    <svg class="mr-3 h-6 w-6 text-premium-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                    Students
                </a>

                <a asp-page="/Instructors/Index" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md hover:bg-premium-800 hover:text-white transition-colors @(ViewContext.RouteData.Values["page"]?.ToString().StartsWith("/Instructors") == true ? "bg-premium-800 text-white" : "text-premium-100")">
                    <svg class="mr-3 h-6 w-6 text-premium-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    Instructors
                </a>

                <a asp-page="/Courses/Index" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md hover:bg-premium-800 hover:text-white transition-colors @(ViewContext.RouteData.Values["page"]?.ToString().StartsWith("/Courses") == true ? "bg-premium-800 text-white" : "text-premium-100")">
                    <svg class="mr-3 h-6 w-6 text-premium-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                    Courses
                </a>
                
                <a asp-page="/Departments/Index" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md hover:bg-premium-800 hover:text-white transition-colors @(ViewContext.RouteData.Values["page"]?.ToString().StartsWith("/Departments") == true ? "bg-premium-800 text-white" : "text-premium-100")">
                    <svg class="mr-3 h-6 w-6 text-premium-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    Departments
                </a>

                <a asp-page="/About" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md hover:bg-premium-800 hover:text-white transition-colors @(ViewContext.RouteData.Values["page"]?.ToString() == "/About" ? "bg-premium-800 text-white" : "text-premium-100")">
                     <svg class="mr-3 h-6 w-6 text-premium-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                     </svg>
                    About
                </a>

            </nav>
            <div class="p-4 border-t border-premium-800">
                <div class="flex items-center gap-3">
                    <div class="h-8 w-8 rounded-full bg-premium-700 flex items-center justify-center text-white font-bold">A</div>
                    <div>
                        <p class="text-sm font-medium text-white">Admin User</p>
                        <p class="text-xs text-premium-300">View Profile</p>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main content -->
        <main class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Header -->
            <header class="bg-white shadow-sm z-10 border-b border-gray-200 h-16 flex items-center px-6 justify-between">
                <div class="text-lg font-semibold text-slate-800">
                    @ViewData["Title"]
                </div>
                <div class="flex items-center gap-4">
                     <span class="text-sm text-gray-500">Premium Admin Console</span>
                </div>
            </header>

            <!-- Scrollable Content -->
            <div class="flex-1 overflow-y-auto bg-slate-50 p-6">
                <!-- Inner container -->
                <div class="max-w-7xl mx-auto">
                     @RenderBody()
                </div>
                
                <footer class="mt-12 border-t border-gray-200 pt-6 pb-6 text-center text-sm text-gray-500">
                     &copy; 2026 - Contoso University - <a asp-page="/Privacy" class="hover:text-premium-600">Privacy</a>
                </footer>
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script> <!-- Optional if scripts use it -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
